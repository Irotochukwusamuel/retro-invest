# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/kltmines

# Seeding Configuration
AUTO_SEED_ON_STARTUP=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_PROVIDER=brevo
CONSOLE_EMAIL_ENABLED=true

# Brevo/Sendinblue Email Configuration
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=noreply@kltmines.com
BREVO_SENDER_NAME=KLTMINES Investment Platform

# SMTP Email Configuration (Alternative to Brevo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SENDER_EMAIL=noreply@kltmines.com
SMTP_SENDER_NAME=KLTMINES Investment Platform

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Payment Gateway Configuration
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Investment Configuration
MIN_INVESTMENT_AMOUNT=5000
MAX_INVESTMENT_AMOUNT=1000000
ROI_UPDATE_INTERVAL=3600000
AUTO_REINVEST_THRESHOLD=1000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# WebSocket
WS_PORT=3002

# Admin Configuration
ADMIN_EMAIL=admin@kltmines.com
ADMIN_PASSWORD=admin123

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
REFERRAL_SYSTEM_ENABLED=true
KYC_VERIFICATION_ENABLED=true
TWO_FACTOR_ENABLED=true
AUTO_REINVEST_ENABLED=true